{{>layout/header}}
<article>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!--    <link rel="stylesheet" href="/css/style_board_host.css">-->
    <!-- Bootstrap CSS -->
    <!--    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">-->

    <div class="container" role="main"  style="background-color: #d2d2d2; height: 100vh;width: 60vw; margin-left: 20vw;">
        <h1>신청내역</h1>
        <form class="mt-3 mb-3">
            <div class="row float-right">
                <div class="mb-3 form-group form-inline col-md-6">
                    <label for="title" class="col-md-6 float-left" style="font-size: 8px;">게시글 번호</label>
                    <input type="text" class="form-control border-right-0 border-left-0 border-top-0 col-md-6" id="id" value="{{gallery.id}}" style="font-size: 8px;" readonly>
                </div>

                <div class="mb-3 form-group form-inline col-md-6" style="font-size: 8px;">
                    <label for="author" class="col-md-4 float-left">작성자</label>
                    <input type="text" class="form-control border-right-0 border-left-0 border-top-0 col-md-8" id="author" value="{{gallery.user.name}}" style="font-size: 8px;" readonly>
                </div>
            </div>

            <div>
                <div class="mt-3">
                    {{#apllInfoList}}
                        <!--                신청자-->
                        <input type="text" id="comment" value="{{applcommentUserName}}" class="border-0 bg-transparent mt-3" style="padding: 10px;" readonly>
                        <br>
                        <input type="text" id="comment" value="{{appl.title}}" class="border-0 mt-3" style="padding: 10px; width: 100%;  background:linear-gradient(-45deg, transparent 5px, white 0);" placeholder="댓글을 입력하세요.." readonly>
                        <input type="text" id="comment" value="{{appl.content}}" class="border-0 mt-3" style="padding: 10px; width: 100%;  background:linear-gradient(-45deg, transparent 5px, white 0);" placeholder="댓글을 입력하세요.." readonly>
                        <br>
                    {{/apllInfoList}}

                </div>
            </div>
        </form>
    </div>
</article>
{{>layout/footer}}