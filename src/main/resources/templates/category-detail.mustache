{{>layout/header}}
<article>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <!--    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">-->
    <link rel="stylesheet" href="/css/style_category_slide.css">
    <link rel="stylesheet" href="/css/style_gallery.css">
    <style>
        /*html,body{width:100%;height:100%}*/
        /*body,p,ul,li,button{margin:0, padding:0}*/
        /*body,button{font-size: 12px;}*/
        /*img,fieldset{border:0;}*/
        ul{list-style:none;}
        /*a{text-decoration:none;}*/
    </style>


    <section  style="margin-left: 20vw; width: 60vw;">
        <!--    슬라이드-->
        <div class="slide">
            <div class="slideshow-container" style="width:60%">
                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">
                    <div class="numbertext">1 / 4</div>
                    <img src="{{category.picture1}}" style="width:100%">
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">2 / 4</div>
                    <img src="{{category.picture2}}" style="width:100%">
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">3 / 4</div>
                    <img src="{{category.picture3}}" style="width:100%">
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">4 / 4</div>
                    <img src="{{category.picture4}}" style="width:100%">
                </div>

                <!-- Next and previous buttons -->
<!--                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>-->
<!--                <a class="next" onclick="plusSlides(1)">&#10095;</a>-->
            </div>

            <img src="{{category.picture5}}" style="width:40%">
        </div>

        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
            <span class="dot" onclick="currentSlide(4)"></span>
        </div>

        <br>
        <!--    게시글 등록버튼-->

        <div style="width: 100px; float: right">
            <a href="save/{{category.id}}" role="button" class="btn btn-outline-dark btn-block">등록</a>
            <input type="hidden" class="form-control" id="id" value="{{category.name}}" readonly>
        </div>
        </form>
    </section>
    <div class="containers mt-3" style="margin-left:18vw;margin-right:5vw;">
        {{#galleryDtoList}}
            <div class="item">
                <ul>
                    <li><a href="{{id}}/gallery"><img src="{{imgFullPath}}" width="200" height="200"></a></li>
                    <li style="font-size:16px; text-align: center;font-family: 'Noto Sans KR', sans-sans-serif, serif;">[ {{title}} ]</li>
                </ul>
            </div>
        {{/galleryDtoList}}
    </div>
</article>
{{>layout/footer}}